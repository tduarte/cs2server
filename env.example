# CS2 Server Configuration
# Copy this file to .env and fill in your values
# NEVER commit .env to git - it contains sensitive information

# REQUIRED: Steam Game Server Token
# Get yours from: https://steamcommunity.com/dev/managegameservers
SRCDS_TOKEN=your-steam-game-server-token-here

# REQUIRED: RCON Password (used for server administration)
# Choose a strong password for security
CS2_RCONPW=your-secure-rcon-password-here

# Optional: Server Password (players need this to join)
# Leave empty for public server
CS2_PW=

# Optional: Server Configuration
CS2_SERVERNAME=CS2 Server
CS2_MAXPLAYERS=10
CS2_PORT=27015

# Optional: RCON Connection (for web UI backend)
# Usually 'cs2-server' when running in Docker, or 'localhost'/'host.docker.internal' for external
RCON_HOST=cs2-server
RCON_PORT=27015

